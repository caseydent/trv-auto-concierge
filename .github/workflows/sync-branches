name: Branch Sync Workflow

on:
  push:
    branches:
      - master

jobs:
  sync-branches:
    runs-on: windows-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up PowerShell
        uses: actions/setup-powershell@v1

      - name: Sync Branches
        run: |
          ./path-to-your-script.ps1
